<script>
    document.catfeed_active = true
</script>
<script>
    explore_active = true
</script>
<div class="container feed-container align-items-center" style="max-width: 90em;">
    <h1 style="font-size: 72pt; color: #d34b3b">Cat Feed</h1>
    <div class="row">
        <div class="col-9">

            <form id="post-forms" method="POST" enctype="multipart/form-data">
                <!-- Submission Box -->
                <div class="card submission mb-3">
                    <div class="row h-100">
                        <div class="col-8">
                            <textarea class="text-submission" id="postTitle" name="postTitle" placeholder="Create Post" style="width: 100%; max-width: 100%;" rows="1" required></textarea>
                            <textarea class="text-submission" id="caption" name="caption" placeholder="Add Caption" style="width: 100%; max-width: 100%;" rows="2"></textarea>
                        </div>

                        <div class="col-2">
                            <input type="file" id="file" name="file" accept="image/*" required/>
                            <!--<button type="button" class="btn btn-danger"><i class="fas fa-image" id="upload-image-btn"></i></button> -->
                            <button type="submit" class="btn btn-danger mt-3" id="submit-submission-btn">Submit</button>
                        </div>
                    </div>
                    <div>
                        <p id="message" class="message"></p>
                    </div>
                </div>
                <!-- Submission Box -->
            </form>

            <div class="dropdown mb-3">
              <button class="btn btn-danger dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Sort by
              </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="#">Date</a>
                <a class="dropdown-item" href="#">Highest Rated</a>
              </div>
            </div>

            <hr><br>
            <!-- Posts -->
            {{#each posts}} {{> postItem}} {{/each}}
            <!-- Posts -->

        </div>

        <div class="col-3">
            <h2 class="big-3">Top Post of the Week</p>
            {{#if display_featured}} {{> featuredItem _id=_id imageUrl=imageUrl author=author postTitle=postTitle caption=caption}} {{/if}}
        </div>
    </div>
</div>